{% extends '/layouts/app.twig' %} {% block content %}
<h1 class="mt-4">Search Results for "{{ searchTerm }}"</h1>

{% if users|length > 0 %} {% for user in users %}
<div class="card my-4" id="user-{{ user.id }}">
	<div class="d-flex p-3 align-items-center">
		<a href="/user/profile/{{ user.id }}" class="d-flex align-items-center text-decoration-none text-black">
			<img src="/assets/images/profile-user.png" alt="User" class="nav-icon me-2" />
			<p class="m-0 fw-bold">{{ user.username }}</p>
		</a>
	</div>
</div>
{% endfor %} {% else %}
<p>No results found for "{{ searchTerm }}".</p>
{% endif %} {% endblock %}
