{% extends '/layouts/auth.twig' %} {% block content %}
<div class="col-12 col-md-7 col-lg-4 mx-auto p-3 p-md-0">
	<form method="POST" action="/auth/forgot-password" class="pt-5">
		<h2 class="mb-3">Forgot Password</h2>
		{% if message %} {% if error == 'success' %}
		<div class="alert alert-{{ error }}">{{ message }} <a href="/" class="text-decoration-none">Log in</a></div>
		{% else %}
		<div class="alert alert-{{ error }}">{{ message }}</div>
		{% endif %} {% endif %}
		<div class="mb-3">
			<label>Email</label>
			<input type="email" class="form-control" name="email" placeholder="Email" required />
		</div>
		<button class="btn btn-primary w-100">Send Reset Link</button>
	</form>
</div>
{% endblock %}
